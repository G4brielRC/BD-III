SELECT
    t.turma,
    a.nome AS nome_aluno,
    b.nota
FROM
    boletim b
JOIN
    alunos a ON b.id_aluno = a.id_aluno
JOIN
    turmas t ON b.id_turma = t.id
WHERE
    t.turma = '3ds';
