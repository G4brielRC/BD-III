CREATE DATABASE AULA_00;
 
USE AULA_00;

CREATE TABLE clientes (
	id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR (100),
    cidade VARCHAR (100)
    );
    
INSERT INTO clientes (nome, cidade) values
('Pedro', 'Guarulhos'),
('Maria', 'São Paulo'),
('Caio', 'Sorocaba'),
('Geovana', 'Rio de Janeiro');
    
    
    -- EM OUTRA PÁGINA --

DELIMITER //

CREATE PROCEDURE PROC_LISTAR_CLIENTES ()

begin 
	
    SELECT * FROM clientes;
    
end //

DELIMITER ;

CALL PROC_LISTAR_CLIENTES ();

* O "CALL PROC_LISTAR_CLIENTES" IRÁ REALIZAR A AÇÃO DO SELECT DA TABLE 
